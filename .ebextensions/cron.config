files:
  "/etc/cron.d/mycron":
    mode: "000644"
    owner: root
    group: root
    content: |
      0 12 * * * root source $(find /var/app/venv/*/bin/activate) && export $(/opt/elasticbeanstalk/bin/get-config --output YAML environment | sed -r 's/: /=/' | xargs) && python3 /var/app/staging/manage.py daily_digest
commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/mycron.bak"
