files:
  "/etc/cron.d/mycron":
    mode: "000644"
    owner: root
    group: root
    content: |
      * * * * * root source $(find /var/app/venv/*/bin/activate) && export $(sudo cat /opt/elasticbeanstalk/deployment/env | xargs) && python3.8 /var/app/current/manage.py daily_digest
commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/mycron.bak"
